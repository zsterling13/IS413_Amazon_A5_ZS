@{

}

<!--Import Book Model to be accessed for the rest of the dynamically created page-->
@model Book

<!--Dynamically input appropriate values from each Book entry by reference to the database-->
<tr id="highlight">
    <td>@Model.BookId </td>
    <td>@Model.Title</td>
    <td>@Model.Author_First_Name</td>
    <td>@Model.Author_Middle_In</td>
    <td>@Model.Author_Last_Name</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>$@Model.Price</td>
    <td>@Model.Page_Num</td>
    <td>
        <form id="@Model.BookId" asp-page="/BookPurchase" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @*@Model.Title*@
                <button type="submit" class="btn-success btn-sm pull-right">
                    Buy Book
                </button>
            </span>
        </form>
    </td>
</tr>